<Window x:Class="Harjoitustyön_kokeillu.NewCustomer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Harjoitustyön_kokeillu"
        mc:Ignorable="d"
        Title="Aiakkaan lisäys " Height="250" Width="350">
    <Canvas>
        <Label Content="Nimi" Width="61" Canvas.Left="23" Canvas.Top="32" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Name="Name" Canvas.Left="110" Canvas.Top="28" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" VerticalContentAlignment="Center" />
        <Label Content="Osoite" Width="60" Canvas.Left="22" Canvas.Top="90" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="Osoite" Canvas.Left="110" Canvas.Top="84" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Height="34" VerticalContentAlignment="Center" />

        <Button Content="Lisää" Height="33" Width="150" Canvas.Left="110" Canvas.Top="151" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Button_Click" />


    </Canvas>
</Window>
